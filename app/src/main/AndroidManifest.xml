<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ritesh.studentutilityapp">

    <!-- Required for showing reminder notifications on Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:label="StudentUtilityApp"
        android:supportsRtl="true">

        <!-- Activities -->
        <activity android:name=".CgpaCalculatorActivity" />
        <activity android:name=".TimetableActivity" />
        <activity android:name=".RemindersActivity" />
        <activity android:name=".NotesActivity" />

        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Broadcast Receiver for Reminders -->
        <receiver android:name=".ReminderReceiver" android:exported="false"/>

    </application>

</manifest>
